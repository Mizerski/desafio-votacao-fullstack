generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum VoteType {
  YES
  NO
}

enum AgendaStatus {
  OPEN
  IN_PROGRESS
  FINISHED
  CANCELLED
  ALL
}

enum AgendaCategory {
  PROJETOS
  ADMINISTRATIVO
  ELEICOES
  ESTATUTARIO
  FINANCEIRO
  OUTROS
  ALL
}

enum AgendaResult {
  APPROVED
  REJECTED
  TIE
  ALL
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  document  String?  @unique
  createdAt DateTime @default(now())
  Votes     Votes[]
}

model Agenda {
  id          String         @id @default(cuid())
  title       String
  description String
  status      AgendaStatus
  category    AgendaCategory
  session     Session[]
  result      AgendaResult
  votes       Votes[]
  createdAt   DateTime       @default(now())
}

model Session {
  id        String   @id @default(cuid())
  agendaId  String
  startTime DateTime
  endTime   DateTime
  agenda    Agenda   @relation(fields: [agendaId], references: [id])
}

model Votes {
  id       String   @id @default(cuid())
  agendaId String
  userId   String
  vote     VoteType
  agenda   Agenda   @relation(fields: [agendaId], references: [id])
  user     User     @relation(fields: [userId], references: [id])
}
